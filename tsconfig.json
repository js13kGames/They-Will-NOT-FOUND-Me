{
    "compilerOptions": {
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "~*": [
                "./*"
            ]
        },
        "target": "es2016",
        "lib": [
            "dom",
            "dom.iterable",
            "es2016"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
    },
    "include": [
        "src",
        "./@types"
    ],
    "exclude": [
        "node_modules"
    ]
}